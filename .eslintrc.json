{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["app/public/**", "devBundle.js"],
  "rules": {
    "linebreak-style":"off",
    "import/no-dynamic-require": "off",
    "no-console": "warn",
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "max-len": ["error", 100],
    "comma-dangle": "off",
    "global-require": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off"
  }
}
