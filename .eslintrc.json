{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["app/public/**"],
  "rules": {
    "import/no-dynamic-require": "off",
    "no-console": "warn",
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "max-len": ["error", 100],
    "comma-dangle": "off"
  }
}
