{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "import"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["node_modules/**/*.js", "node_modules/**/*.jsx", "build/**/*.js"],
  "rules": {
    "linebreak-style":"off",
    "import/no-dynamic-require": "off",
    "no-console": "warn",
    "semi": ["warn", "always"],
    "no-unused-vars": "warn",
    "max-len": ["error", 120],
    "comma-dangle": "off",
    "global-require": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "consistent-return": "off"
  }
}
